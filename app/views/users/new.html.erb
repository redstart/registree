<div class="jumbotron col-lg-4 col-lg-offset-4">
	<p class="text-center">Заполните поля для регистрации</p>

		<div class="form-horizontal " role="form">

		<%= form_for @user do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

		<div class="form-group">
			<%= f.label :surename, 'Фамилия' %>
			<%= f.text_field :surename, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :name, 'Имя' %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :second_name, 'Отчество' %>
			<%= f.text_field :second_name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :birthday, 'Дата рождения' %> <br />
			<%= f.date_select :birthday, :start_year=>1950 %>
		</div>
		<div class="form-group">
			<%= f.label :login, 'Логин' %>
			<%= f.text_field :login, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :email, 'Эл. почта' %>
			<%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :password, 'Пароль' %>
			<%= f.password_field :password, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :password_confirmation, 'Подтверждение пароля' %>
			<%= f.password_field :password_confirmation, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit 'Зарегистрироваться', class: "btn btn-primary" %>
		</div>
		<% end %>

		<div><!--end form-->
</div>
