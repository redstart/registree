<div class="jumbotron col-lg-4 col-lg-offset-4">
	<p class="text-center">Please register here</p>

		<div class="form-horizontal " role="form">

		<%= form_for @user do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

		<div class="form-group">
			<%= f.label :surename %>
			<%= f.text_field :surename, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :second_name %>
			<%= f.text_field :second_name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :birthday %> <br />
			<%= f.date_select :birthday, :start_year=>1950 %>
		</div>
		<div class="form-group">
			<%= f.label :login %>
			<%= f.text_field :login, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit 'Register', class: "btn btn-primary" %>
		</div>
		<% end %>

		<div><!--end form-->
</div>
